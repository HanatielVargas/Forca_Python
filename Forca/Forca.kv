#:kivy 2.0.0

<Main>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: root.TEMAS[root.tema_atual]['Fundo']
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'horizontal'
            padding: '2dp', '50dp', '2dp', '35dp'
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        id: image
                        source: 'Forca/images/forca.png'
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: output
                    color: root.TEMAS[root.tema_atual]['Letra']
                    text: 'Palavra'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: wrongs
                    color: root.TEMAS[root.tema_atual]['Letra']
                    text: 'Letras\nErradas'
        BoxLayout:
            orientation: 'horizontal'
            padding: '2dp', '10dp', '2dp', '15dp'
            size_hint: None, None
            height: '60dp'
            width: '230dp'
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            TextInput:
                id: input
                color: root.TEMAS[root.tema_atual]['Letra']
                hint_text: 'Digite a letra aqui'
                multiline: False
                font_context: '50pt'
            Button:
                id: confirm
                background_color: root.TEMAS[root.tema_atual]['Fundo']
                color: root.TEMAS[root.tema_atual]['Letra']
                size_hint_x: None
                width: '50dp'
                text: 'Ok'
                on_release: root.atualizar()
        BoxLayout:
            orientation: 'horizontal'
            padding: '2dp'
            spacing: '1dp'
            size_hint_y: None
            height: '55dp'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    id: add_word
                    background_color: root.TEMAS[root.tema_atual]['Fundo']
                    color: root.TEMAS[root.tema_atual]['Letra']
                    text: 'Add Palavra'
                    on_release: root.adicionar_palavra()
            BoxLayout:
                orientation: 'vertical'
                Button:
                    id: new_game
                    background_color: root.TEMAS[root.tema_atual]['Fundo']
                    color: root.TEMAS[root.tema_atual]['Letra']
                    text: 'Novo Jogo'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    id: change_theme
                    background_color: root.TEMAS[root.tema_atual]['Fundo']  
                    color: root.TEMAS[root.tema_atual]['Letra']
                    text: 'Mudar Tema'
                    on_release: root.mudar_tema()
